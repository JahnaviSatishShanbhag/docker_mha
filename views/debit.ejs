    <style>
        body {
            margin: 0px;
        }

        input {
            height: 30px;
            width: 310px;
            border: 2px solid rgb(23, 181, 192);
            border-radius: 8px;
            font-size: 15px;
            cursor: pointer;
        }

        #debitFlex {
            border: 2px solid black;
            border-radius: 23px;
            height: 300px;
            width: 500px;
            background-color: #8EE4AF;
            margin: auto;
            margin-top: 20px;
            display: flex;
            justify-content: center;
        }

        input:hover {
            border: 2px solid white;
        }

        #btn {
            position: absolute;
            color: white;
            background-color: rgb(54, 45, 184);
            border: 2px solid rgb(23, 181, 192);
            margin: 8px;
            width: 310px;
            height: 36px;
            text-align: center;
            cursor: pointer;
            border-radius: 8px;
            right: 513px;

        }

        #btn:hover {
            background-color: rgb(30, 94, 167);
            border: 2px solid black;
        }

        input:focus {
            outline: none;
        }

        label {
            position: relative;
            color: #05386b;
            font-weight: bold;
            font-size: 18px;
            right: 0px;
        }

        #debit,
        #upi,
        #credit {
            margin-top: 40px;
            height: 194px;
        }

        #upi {
            height: 94px;
        }

        #debit input,
        #upi input,
        #credit input {
            /* position:relative; */
            border: 1px solid black;
            border-radius: 0px;
            /* left:4px; */
        }

        #oneLine,
        #coneLine {
            display: flex;
        }

        #exp,
        #cexp {
            display: flex;
        }

        #exp input,
        #cexp input {
            width: 60px;
            margin: 2px;
        }

        #cvv,
        #cvvc {
            margin-top: 2px;
            margin-left: 14px;
        }

        #cvv input,
        #cvvc input {
            width: 154px;
        }

        #xx {
            margin-top: 100px;
            margin-left: 310px;
            color: #05386b;
            font-weight: bold;
            font-size: 20px;
        }
    </style>
</head>

