<body>
    <div id="xx">
        Fill in the details of your debit card below to continue:</div>
    <div id="debitFlex">
        <div id="debit">
            <label>Name on card</label>
            <br>
            <input id="cname" type="text" onblur="return checkCardName()">
            <br>

            <label>Card number</label>
            <br>
            <input id="cnumber" type="text" onblur="return checkCardNumber()">
            <br>
            <div id="oneLine">
                <div>
                    <label>Expiration</label>
                    <br>
                    <div id="exp">
                        <input id="cmonth" type="text" onblur="return checkMonth()">
                        <input id="cyear" type="text" onblur="return checkYear()">
                    </div>
                </div>
                <br>
                <div id="cvv">
                    <label>CVV number</label>
                    <br>
                    <input id="ccvv" type="password" onblur="return checkCVV()">
                </div>
            </div>
            <button id="btn" type="button" onclick="navigate()">Continue</button>
        </div>
    </div>

